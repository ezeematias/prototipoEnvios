@model prototipo.MVC.Models.ProductoModel
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
@{ Layout = null; }
@using (Html.BeginForm("EditProducto", "Productos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <h3 class="modal-title text-center">EDITAR PRODUCTO</h3>
    <hr />
    @Html.ValidationSummary(true)
    <div class="modal-body text-center">
        <label>NOMBRE</label>
        @Html.TextBoxFor(model => model.Nombre, new { Value = ViewBag.Nombre, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nombre)
        <br />
        <label>MARCA</label>
        @Html.TextBoxFor(model => model.Marca, new { Value = ViewBag.Marca, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Marca)
        <br />
        <label>DESCRIPCIÓN</label>
        @Html.TextBoxFor(model => model.Descripción, new { Value = ViewBag.Descripción, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Descripción)
        <br />
        <label>PRECIO</label>
        @Html.TextBoxFor(model => model.Precio, new { Value = ViewBag.Precio, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Precio)
        <br />
        <label>STOCK</label>
        @Html.TextBoxFor(model => model.Stock, new { Value = ViewBag.Stock, @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Stock)
    </div>
    <div class="modal-footer">
        <button type="button" class="pull-left btn btn-danger" data-dismiss="modal" id="cancelar">CANCELAR</button>
        <button type="submit" class="btn btn-success">MODIFICAR</button>
    </div>
    <script>

        $('#cancelar').click(function (e) {
            e.preventDefault();
            $('#Nombre').val('');
            $('#Marca').val('');
            $('#Descripción').val('');
            $('#Precio').val('');
            $('#Stock').val('');
        });

    </script>
}
